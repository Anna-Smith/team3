        <script type="text/javascript">
            ymaps.ready(init);
            var myMap;

            function init(){
                myMap = new ymaps.Map('map', {
                    center: [56.8575, 60.6125],
                    zoom: 4,
                    controls: ['zoomControl', 'fullscreenControl']
                });
                var coordinate = [56.8575, 60.6125];
                myMap.geoObjects.add(new ymaps.Placemark(coordinate));
            }
        </script>
        
